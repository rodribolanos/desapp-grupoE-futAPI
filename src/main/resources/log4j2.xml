<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{ISO8601} %-5p [%t] %c{1.} - %m%n"/>
    </Console>
    <RollingFile name="AuditFile" fileName="logs/audit.log" filePattern="logs/audit-%d{yyyy-MM-dd}-%i.log.gz">
      <PatternLayout pattern="%d{ISO8601} %-5p %c - %m%n"/>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1"/>
        <SizeBasedTriggeringPolicy size="10 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="10"/>
    </RollingFile>
  </Appenders>

  <Loggers>
    <!-- Logger dedicado para el aspecto de auditorÃ­a -->
    <Logger name="ar.edu.unq.futapp.audit.AuditAspect" level="info" additivity="false">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="AuditFile"/>
    </Logger>

    <!-- Root logger -->
    <Root level="info">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>

